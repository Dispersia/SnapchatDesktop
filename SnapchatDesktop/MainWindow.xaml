<Controls:MetroWindow x:Class="SnapchatDesktop.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:SnapchatDesktop"
		xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		mc:Ignorable="d"
		Title="Snapchat for Desktop" Height="500" Width="700"
		MinHeight="500" MinWidth="700" Icon="Ghost.ico"
		Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" WindowStartupLocation="CenterScreen">

	<Controls:TransitioningContentControl x:Name="Transitioner" Transition="LeftReplace">
		<Frame Name="PageHostFrame" />
	</Controls:TransitioningContentControl>
</Controls:MetroWindow>
